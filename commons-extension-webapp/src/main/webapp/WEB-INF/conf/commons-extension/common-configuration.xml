<?xml version="1.0" encoding="UTF-8"?>
<configuration
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd http://www.exoplatform.org/xml/ns/kernel_1_2.xsd"
   xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">

  <component>
    <type>org.exoplatform.services.deployment.ContentInitializerService</type>
  </component>
  
  <component>
    <key>org.exoplatform.commons.api.event.EventManager</key>
	<type>org.exoplatform.commons.event.impl.EventManagerImpl</type>
  </component>

  <component>
    <key>org.exoplatform.commons.api.notification.service.NotificationService</key>
    <type>org.exoplatform.commons.notification.impl.NotificationServiceImpl</type>
    <init-params>
      <value-param>
        <name>workspace</name>
        <description>workspace for save data of notification</description>
        <value>portal-system</value>
      </value-param>
    </init-params>
  </component>

  <component>
    <key>org.exoplatform.commons.api.notification.service.UserNotificationService</key>
    <type>org.exoplatform.commons.notification.impl.UserNotificationServiceImpl</type>
  </component>

</configuration>