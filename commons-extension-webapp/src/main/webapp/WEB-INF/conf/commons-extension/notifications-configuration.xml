<?xml version="1.0" encoding="UTF-8"?>

<configuration
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd http://www.exoplatform.org/xml/ns/kernel_1_2.xsd"
  xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">
  
  <component>
    <key>org.exoplatform.commons.api.notification.service.storage.NotificationDataStorage</key>
    <type>org.exoplatform.commons.notification.impl.storage.NotificationDataStorageImpl</type>
  </component>

  <component>
    <key>org.exoplatform.commons.api.notification.service.storage.NotificationService</key>
    <type>org.exoplatform.commons.notification.impl.storage.NotificationServiceImpl</type>
  </component>

  <component>
    <key>org.exoplatform.commons.api.notification.service.setting.UserNotificationService</key>
    <type>org.exoplatform.commons.notification.impl.setting.UserNotificationServiceImpl</type>
  </component>

  <component>
    <key>org.exoplatform.commons.api.notification.service.setting.ProviderSettingService</key>
    <type>org.exoplatform.commons.notification.impl.setting.ProviderSettingServiceImpl</type>
  </component>

  <component>
    <key>org.exoplatform.commons.api.notification.service.storage.ProviderService</key>
    <type>org.exoplatform.commons.notification.impl.storage.ProviderServiceImpl</type>
  </component>
  
  <component>
    <type>org.exoplatform.commons.notification.NotificationConfiguration</type>
    <init-params>
			<value-param>
				<name>workspace</name>
				<value>portal-system</value>
			</value-param>
			<value-param>
				<name>dayOfWeekend</name>
				<value>6</value>
			</value-param>
			<value-param>
				<name>dayOfMonthend</name>
				<value>28</value>
			</value-param>
		</init-params>
  </component>

  <component>
    <key>org.exoplatform.commons.api.notification.service.NotificationProviderService</key>
    <type>org.exoplatform.commons.notification.impl.DigestorProviderImpl</type>
  </component>
  
  <component>
    <key>org.exoplatform.commons.api.notification.service.TemplateGenerator</key>
    <type>org.exoplatform.commons.notification.cache.CacheTemplateGenerator</type>
  </component>

  <external-component-plugins>
    <target-component>org.exoplatform.services.scheduler.JobSchedulerService</target-component>
    <component-plugin>
      <name>SendNotificationJob</name>
      <set-method>addPeriodJob</set-method>
      <type>org.exoplatform.commons.notification.job.NotificationInfoJob</type>
      <description>add a send notification job to the JobSchedulerService</description>
      <init-params>
        <properties-param>
          <name>job.info</name>
          <description>save the monitor data  periodically</description>
          <property name="jobName" value="NotificationJob"/>
          <property name="groupName" value="Notification"/>
          <property name="job" value="org.exoplatform.commons.notification.job.NotificationJob"/>
          <property name="repeatCount" value="0"/>
          <property name="period" value="180000"/> <!-- 1 day-->    
          <property name="startTime" value="+30000"/>
          <property name="endTime" value=""/>               
        </properties-param>
        <properties-param>
          <name>notification.info</name>
          <description></description>
          <property name="maxToSend" value="20"/> <!-- 20 mails on one time to send-->          
          <property name="sleepTimeNextSend" value="20"/> <!-- 20 seconds on one time to send-->  
        </properties-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>

 <external-component-plugins>
    <target-component>org.exoplatform.commons.api.notification.service.TemplateGenerator</target-component>
    <component-plugin>
      <name>template.providers</name>
      <set-method>registerTemplateConfigurationPlugin</set-method>
      <type>org.exoplatform.commons.api.notification.plugin.TemplateConfigurationPlugin</type>
      <description>Initial template for providers.</description>
      <init-params>
        <object-param>
          <name>template.DigestProvider</name>
          <description>The template of DigestProvider</description>
          <object type="org.exoplatform.commons.api.notification.plugin.MappingKey">
            <field name="providerId">
              <string>DigestProvider</string>
            </field>
            <field name="localeResouceBundle">
              <string>locale.notification.template.NotificationTemplate</string>
            </field>
            <field name="localeResouceTemplate">
              <string>war:/notification/templates/DigestProvider.gtmpl</string>
            </field>
          </object>
        </object-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>

</configuration>