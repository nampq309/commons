<?xml version="1.0" encoding="UTF-8"?>

<configuration
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd http://www.exoplatform.org/xml/ns/kernel_1_2.xsd"
  xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">
  
  <component>
    <key>org.exoplatform.commons.api.notification.NotificationDataStorage</key>
    <type>org.exoplatform.commons.notification.impl.NotificationDataStorageImpl</type>
  </component>

  <component>
    <key>org.exoplatform.commons.api.notification.service.NotificationService</key>
    <type>org.exoplatform.commons.notification.impl.NotificationServiceImpl</type>
  </component>

  <component>
    <key>org.exoplatform.commons.api.notification.service.UserNotificationService</key>
    <type>org.exoplatform.commons.notification.impl.UserNotificationServiceImpl</type>
  </component>

  <component>
    <key>org.exoplatform.commons.api.notification.service.ProviderSettingService</key>
    <type>org.exoplatform.commons.notification.impl.ProviderSettingServiceImpl</type>
  </component>

  <component>
    <key>org.exoplatform.commons.api.notification.service.ProviderService</key>
    <type>org.exoplatform.commons.notification.impl.ProviderServiceImpl</type>
  </component>
  
  <component>
    <type>org.exoplatform.commons.notification.NotificationConfiguration</type>
    <init-params>
			<value-param>
				<name>workspace</name>
				<value>portal-system</value>
			</value-param>
			<value-param>
				<name>dayOfWeekend</name>
				<value>1</value>
			</value-param>
			<value-param>
				<name>dayOfMonthend</name>
				<value>7</value>
			</value-param>
		</init-params>
  </component>
  
  

  <component>
    <key>org.exoplatform.commons.api.notification.service.NotificationProviderService</key>
    <type>org.exoplatform.commons.notification.impl.DigestorProviderImpl</type>
  </component>

  <external-component-plugins>
    <target-component>org.exoplatform.services.scheduler.JobSchedulerService</target-component>
    <component-plugin>
      <name>SendNotificationJob</name>
      <set-method>addPeriodJob</set-method>
      <type>org.exoplatform.commons.notification.job.NotificationInfoJob</type>
      <description>add a send notification job to the JobSchedulerService</description>
      <init-params>
        <properties-param>
          <name>job.info</name>
          <description>save the monitor data  periodically</description>
          <property name="jobName" value="NotificationJob"/>
          <property name="groupName" value="Notification"/>
          <property name="job" value="org.exoplatform.commons.notification.job.NotificationJob"/>
          <property name="repeatCount" value="0"/>
          <property name="period" value="8640000"/> <!-- 1 day-->    
          <property name="startTime" value="+1000"/>
          <property name="endTime" value=""/>               
        </properties-param>
        <properties-param>
          <name>notification.info</name>
          <description></description>
          <property name="maxToSend" value="20"/> <!-- 20 mails on one time to send-->          
          <property name="sleepTimeNextSend" value="20"/> <!-- 20 seconds on one time to send-->  
        </properties-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>

  
  <external-component-plugins>
    <target-component>org.exoplatform.commons.api.notification.service.ProviderService</target-component>
    <component-plugin>
      <name>default.providers</name>
      <set-method>registerProviderPlugin</set-method>
      <type>org.exoplatform.commons.api.notification.plugin.ProviderPlugin</type>
      <description>Initial values for providers.</description>
      
      <init-params>
        <object-param>
          <name>DigestProvider</name>
          <description>The digest message</description>
          <object type="org.exoplatform.commons.api.notification.plugin.ProviderModel">
            <field name="type">
              <string>DigestProvider</string>
            </field>
            <field name="name">
              <string>DigestProvider</string>
            </field>
            <field name="order">
              <string>0</string>
            </field>
            <field name="params">
              <collection type="java.util.ArrayList">               
                <value>
                  <string></string>
                </value>
              </collection>
            </field>
            <field name="templates">
              <collection type="java.util.ArrayList">               
                <value>
                  <object type="org.exoplatform.commons.api.notification.plugin.Template">
                    <field name="language">
                      <string>English</string>
                    </field>
                    <field name="subject">
                      <string><![CDATA[Your $Domain Intranet Updates: $start-date - $end-date]]></string>
                    </field>
                    <field name="template">
                      <string>
                        <![CDATA[Title: Your $Domain Intranet Updates: $start-date - $end-date<br/>
                                 Hi $first-name</br>
                                 Here's what's been happening in your Social Intranet in the past 24 hours/week/month.</br>
                                 $content
                                 If you do not want to receive such notifications, <a href="$changeSettings" target="_blank">Click here</a> to change your notification settings.
                        ]]></string>
                    </field>
                    <field name="digesters">
                      <collection type="java.util.ArrayList">
                        <value>
                          <string></string>
                        </value>
                      </collection>
                    </field>
                  </object>
                </value>
                <value>
                  <object type="org.exoplatform.commons.api.notification.plugin.Template">
                    <field name="language">
                      <string>French</string>
                    </field>
                    <field name="subject">
                      <string><![CDATA[Your $Domain Intranet Updates: $start-date - $end-date]]></string>
                    </field>
                    <field name="template">
                      <string>
                        <![CDATA[Title: Your $Domain Intranet Updates: $start-date - $end-date<br/>
                                 Hi $first-name</br>
                                 Here's what's been happening in your Social Intranet in the past 24 hours/week/month.</br>
                                 $content <br/>
                                 If you do not want to receive such notifications, <a href="$changeSettings" target="_blank">Click here</a> to change your notification settings.
                        ]]></string>
                    </field>
                    <field name="digesters">
                      <collection type="java.util.ArrayList">
                        <value>
                          <string></string>
                        </value>
                      </collection>
                    </field>
                  </object>
                </value>
              </collection>
            </field>
          </object>
        </object-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>
  
</configuration>